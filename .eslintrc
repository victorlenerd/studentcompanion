{
    "extends": ["airbnb"],
    "parser": "babel-eslint",
    "globals": {
      "__DEV__": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "comma-dangle": ["error", "only-multiline"],
      "camelcase": 0,
      "consistent-return": 0,
      "class-methods-use-this": 0,
      "func-names": 0,
      "global-require": 0,
      "max-len": ["warn", 120, 2, {
        "ignoreUrls": true,
        "ignoreComments": false
      }],
      "arrow-parens": ["error", "as-needed"],
      "function-paren-newline": 0,
      "object-curly-newline": 0,
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
      "arrow-body-style": 0,
      "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 4 }],
      "no-confusing-arrow": ["error", {"allowParens": true}],
      "no-nested-ternary": 0,
      "no-new": 0,
      "no-return-assign": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
      "no-unused-vars": ["error", { "vars": "local", "args": "none", "varsIgnorePattern": "^React$" }],
      "no-use-before-define": 0,
      "padded-blocks": ["error", "never"],
      "prefer-arrow-callback": 0,
      "quote-props": ["error", "as-needed", { "keywords": false, "unnecessary": true, "numbers": true }],
      "wrap-iife": ["error", "inside"],
      "react/jsx-boolean-value": 0,
      "react/jsx-closing-bracket-location": ["error", { "selfClosing": "line-aligned", "nonEmpty": "line-aligned" }],
      "react/prefer-stateless-function": 0,
      "import/no-mutable-exports": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 0,
      "import/extensions": 0,
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "react/prop-types": [1, { "skipUndeclared": true }],
      "no-named-as-default": 0,
      "import/no-extraneous-dependencies": 0,
      "prefer-const": ["error", {"destructuring": "all"}],
  
      "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }],
  
      // disable rules that dublicates 'babel/*' plugin rules
      "new-cap": 0,
      "array-bracket-spacing": 0,
      "object-curly-spacing": 0,
      "object-shorthand": 0,
  
      // support experimental features
      "babel/new-cap": 0,
      "babel/array-bracket-spacing": ["error","never"],
      "babel/object-curly-spacing": ["error", "always"],
      "babel/object-shorthand": ["error", "always"],
      "babel/no-await-in-loop": 1,
      "no-mixed-operators": ["error", {"allowSamePrecedence": true}]
    },
    "plugins": [
      "babel"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true,
        "experimentalDecorators": true
      }
    }
  }
  