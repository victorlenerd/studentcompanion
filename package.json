{
  "name": "StudentCompanion",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "android": "react-native bundle --dev false  --assets-dest ./android/app/src/main/res/ --entry-file ./index.js --bundle-output ./android/app/src/main/assets/index.android.bundle --platform android",
    "ios": "react-native bundle --entry-file index.js --platform ios --dev false --bundle-output ios/main.jsbundle --assets-dest ios",
    "clean:ios": "cd ios && xcodebuild -workspace 'StudentCompanion.xcworkspace' -scheme 'StudentCompanion' clean",
    "build:ios": "cd ios && xcodebuild -workspace 'StudentCompanion.xcworkspace' -scheme 'StudentCompanion' build",
    "clean:android": "cd android && ./gradlew clean",
    "build:android": "cd android && ./gradlew build",
    "build:apk": "cd android && ./gradlew assembleRelease",
    "test": "jest",
    "formatter": "prettier --single-quote --trailing-comma=es5 --print-width=120 --write \"src/**/*.{js,jsx}\""
  },
  "dependencies": {
    "create-react-class": "^15.6.2",
    "firebase": "^4.8.1",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "prop-types": "^15.6.0",
    "react": "16.0.0",
    "react-native": "0.51.0",
    "react-native-animatable": "^1.1.1",
    "react-native-device-info": "^0.10.2",
    "react-native-firebase": "^3.2.0",
    "react-native-image-picker": "^0.26.7",
    "react-native-keyboard-aware-scrollview": "^2.0.0",
    "react-native-push-notification": "^3.0.0",
    "react-native-swiper": "^1.5.13",
    "react-native-tts": "^1.3.0",
    "react-navigation": "^1.0.0-beta.30",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "rn-viewpager": "^1.2.9"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-jest": "22.0.4",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react-native": "4.0.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.14.3",
    "jest": "22.0.4",
    "lint-staged": "^6.1.0",
    "react-test-renderer": "16.0.0"
  },
  "jest": {
    "preset": "react-native"
  }
}
